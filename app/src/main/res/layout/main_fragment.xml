<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/city_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:hint="@string/city_home"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_home"
            tools:text="lt/ln: 55.755826, 37.617299900000035" />


        <TextView
            android:id="@+id/city_home_temperature_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/temperature_day"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_baseline_wb_sunny_24"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/city_home_temperature_night"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_coordinates"
            app:layout_goneMarginEnd="16dp" />

        <TextView
            android:id="@+id/city_home_temperature_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/temperature_night"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_baseline_brightness_3_24"
            app:layout_constrainedWidth="true"
            app:layout_constraintBaseline_toBaselineOf="@id/city_home_temperature_day"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city_home_temperature_day"
            app:layout_goneMarginEnd="16dp" />


        <TextView
            android:id="@+id/text_CH_temperature_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="30sp"
            app:drawableRightCompat="@drawable/thermometer_weather"
            app:layout_constraintEnd_toEndOf="@id/city_home_temperature_day"
            app:layout_constraintStart_toStartOf="@id/city_home_temperature_day"
            app:layout_constraintTop_toBottomOf="@id/city_home_temperature_day" />

        <TextView
            android:id="@+id/text_CH_temperature_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/thermometer_weather"
            app:layout_constraintEnd_toEndOf="@id/city_home_temperature_night"
            app:layout_constraintStart_toStartOf="@id/city_home_temperature_night"
            app:layout_constraintTop_toBottomOf="@id/city_home_temperature_night" />


        <EditText
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/city"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_temperature_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/temperature_day"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_baseline_wb_sunny_24"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/city_temperature_night"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_goneMarginEnd="16dp" />

        <TextView
            android:id="@+id/city_temperature_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/temperature_night"
            android:textSize="15sp"
            app:drawableTopCompat="@drawable/ic_baseline_brightness_3_24"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city_temperature_day"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_goneMarginEnd="16dp" />


        <TextView
            android:id="@+id/text_city_temperature_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/thermometer_weather"
            app:layout_constraintEnd_toEndOf="@id/city_temperature_day"
            app:layout_constraintStart_toStartOf="@id/city_temperature_day"
            app:layout_constraintTop_toBottomOf="@id/city_temperature_day" />

        <TextView
            android:id="@+id/text_city_temperature_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/thermometer_weather"
            app:layout_constraintEnd_toEndOf="@id/city_temperature_night"
            app:layout_constraintStart_toStartOf="@id/city_temperature_night"
            app:layout_constraintTop_toBottomOf="@id/city_temperature_night" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>