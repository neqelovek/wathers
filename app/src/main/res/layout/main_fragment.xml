<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/city_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_city_home"
            android:hint="@string/city_home"
            android:textSize="@dimen/text_size_city_name"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_home_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_coordinates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_home" />

        <TextView
            android:id="@+id/city_home_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_temperature_day"
            android:layout_marginTop="@dimen/margin_top_temperature_day"
            android:text="@string/temperature"
            android:textSize="@dimen/text_size_temperature"
            android:textStyle="italic"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/city_home_temperature_feels_like"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_home_coordinates"
            app:layout_goneMarginEnd="@dimen/gone_margin_end_temperature_day" />

        <TextView
            android:id="@+id/city_home_temperature_feels_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_temperature_night"
            android:layout_marginEnd="@dimen/margin_end_temperature_night"
            android:text="@string/feels_like"
            android:textSize="@dimen/text_size_temperature"
            android:textStyle="italic"
            app:layout_constrainedWidth="true"
            app:layout_constraintBaseline_toBaselineOf="@id/city_home_temperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city_home_temperature"
            app:layout_goneMarginEnd="@dimen/gone_margin_end_temperature_night" />

        <TextView
            android:id="@+id/text_CH_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_temperature"
            android:textSize="@dimen/text_size_temperature_numbers"
            app:drawableRightCompat="@drawable/thermometer_weather"
            app:layout_constraintEnd_toEndOf="@id/city_home_temperature"
            app:layout_constraintStart_toStartOf="@id/city_home_temperature"
            app:layout_constraintTop_toBottomOf="@id/city_home_temperature" />

        <TextView
            android:id="@+id/text_CH_temperature_feels_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_temperature"
            android:textSize="@dimen/text_size_temperature_numbers"
            app:drawableRightCompat="@drawable/thermometer_weather"
            app:layout_constraintEnd_toEndOf="@id/city_home_temperature_feels_like"
            app:layout_constraintStart_toStartOf="@id/city_home_temperature_feels_like"
            app:layout_constraintTop_toBottomOf="@id/city_home_temperature_feels_like" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city_search"
            android:hint="@string/city_search"
            android:layout_marginStart="@dimen/margin_search"
            android:layout_marginEnd="@dimen/margin_search"
            android:layout_marginTop="@dimen/margin_15_dp"
            app:layout_constraintTop_toBottomOf="@id/text_CH_temperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_android_black_24dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_city_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

      </com.google.android.material.textfield.TextInputLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_fragment_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_recycler"
            android:layout_marginTop="@dimen/margin_top_recycler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_search" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginBottom="@dimen/margin_15_dp"
            android:backgroundTint="@color/color_button"
            android:text="@string/world"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="@dimen/radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_loading_layout"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>